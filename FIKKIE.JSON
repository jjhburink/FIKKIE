function exportToJSON() {
  // ID van het Google Docs-document
  var documentId = '1_BDbajX5QUKUMJFAqK-8Xb8HpGywAyHrPXyQbCH4-uM';
  
  // Document ophalen
  var document = DocumentApp.openById(documentId);
  
  // JSON-object initialiseren
  var jsonData = {
    pages: []
  };

  // Loop door de paragrafen in het document
  var paragraphs = document.getBody().getParagraphs();
  for (var i = 0; i < paragraphs.length; i++) {
    var paragraph = paragraphs[i];
    
    // Alleen verwerken als de paragraaf tekst bevat
    if (paragraph.getText()) {
      var page = {
        title: paragraph.getText(),
        sections: []
      };

      // Kop 1 verwerken
      var heading1 = paragraph.getNextHeading(DocumentApp.ParagraphHeading.HEADING1);
      if (heading1) {
        page.heading1 = heading1.getText();
      }

      // Verwerken van Kop 2, Kop 3, enz.
      var child = paragraph;
      while (child = child.getNextSibling()) {
        if (child.getType() == DocumentApp.ElementType.PARAGRAPH) {
          var section = {
            type: 'paragraph',
            content: child.getText()
          };
          
          // Formulieren herkennen
          if (/\{.*\}/.test(section.content)) {
            section.type = 'form';
          }

          page.sections.push(section);
        }
      }

      jsonData.pages.push(page);
    }
  }

  // JSON-bestand opslaan op Google Drive
  var jsonString = JSON.stringify(jsonData, null, 2);
  var jsonBlob = Utilities.newBlob(jsonString, 'application/json');
  DriveApp.createFile(jsonBlob);
  
  Logger.log('JSON-bestand is aangemaakt op Google Drive.');
}
